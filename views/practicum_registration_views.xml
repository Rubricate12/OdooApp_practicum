<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tampilan utk model registration-->
    <record id="view_practicum_registration_form" model="ir.ui.view">
        <field name="name">practicum.registration.form</field>
        <field name="model">practicum.registration</field>
        <field name="arch" type="xml">
            <form string="Pendaftaran Praktikum">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary"/> <!--invisible kalau state != draft, dan seterusnya-->
                    <button name="action_approve" string="Approve" type="object" class="btn-primary"/>
                    <button name="action_done" string="Tandai Selesai" type="object" class="btn-primary"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,done"/>                
                </header>
                <sheet>
                    <!--relasi many2one oleh studentid ke model student, dan practicumid ke model session (jadwal)-->
                    <group>
                        <field name="student_id"/>
                        <field name="practicum_id"/>
                        <field name="registration_date"/>
                    </group>
                    <notebook>
                        <page string="Catatan">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_practicum_registration_list" model="ir.ui.view">
        <field name="name">practicum.registration.list</field>
        <field name="model">practicum.registration</field>
        <field name="arch" type="xml">
            <list string="Pendaftaran Praktikum" editable="bottom">
                <field name="student_id"/>
                <field name="practicum_id"/>
                <field name="registration_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <record id="action_practicum_registration" model="ir.actions.act_window">
        <field name="name">Pendaftaran</field>
        <field name="res_model">practicum.registration</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>